	<sql id="search">	
		<if test="searchType == 'tcw'.toString()">
<!-- 			AND 
			(
				(title LIKE '%'||#{keyword}||'%')OR
				(content LIKE '%'||#{keyword}||'%')OR
				(writer LIKE '%'||#{keyword}||'%')
			 )	 -->
		</if>
		<if test="searchType == 'tc'.toString()">
			AND 
			((title LIKE '%'||#{keyword}||'%')OR
			 (content LIKE '%'||#{keyword}||'%'))	
		</if>
		<if test="searchType == 'cw'.toString()">
			AND 
			((writer LIKE '%'||#{keyword}||'%')OR
			 (content LIKE '%'||#{keyword}||'%'))	
		</if>
		<if test="searchType == 't'.toString()">
			AND title LIKE '%'||#{keyword}||'%'			
		</if>
		<if test="searchType == 'w'.toString()">
			AND writer LIKE '%'||#{keyword}||'%'			
		</if>
		<if test="searchType == 'c'.toString()">
			AND content LIKE '%'||#{keyword}||'%'			
		</if>		
	</sql>	
	<select id="selectSearchMemberList" resultType="board">
		SELECT * 
		FROM board
		WHERE bno IS NOT NULL
		<include refid="search" />
		ORDER BY regDate DESC
	</select>
	<select id="selectBoardCriteriaTotalCount" resultType="int">
		SELECT
		COUNT(*) 
		FROM board
		WHERE bno IS NOT NULL
		<include refid="search" />
		ORDER BY regDate DESC
	</select>
	
	
	<select id="selectBoardByBno" resultType="int">
		SELECT *
		FROM board
		WHERE bno = #{bno}
	</select>
	
	<update id="insertBoard" parameterType="board">
		INSERT INTO 
		member(bno, title, writer, content, regdate)
		VALUES(#{bno},#{title},#{writer},#{content},SYSDATE)
	</update>	
		
	<update id="updateBoard" parameterType="board">
		UPDATE board
		SET
		<if test="title != null">
		title=#{titie},		
		</if>
		<if test="content != null">
		content=#{content},	
		</if>
		updatedate=SYSDATE
		WHERE bno = #{bno}
	</update>
	
	<update id="deleteBoard">
		DELETE FROM board
		WHERE bno = #{bno}
	</update>
	
	<update id="increaseViewCnt" parameterType="int">
		UPDATE board
		SET
		viewcnt = (SELECT viewcnt +1 FROM board WHERE bno = #{bno})
		WHERE bno = #{bno}
	</update>
	
	<select id="selectBoardSeqNext">
		SELECT board_seq.nextval
		FROM dual
	</select>
	
</mapper>




